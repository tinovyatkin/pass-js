    "bin/passkit-keys"
  ],
  "types": "./dist/index.d.ts",
  "main": "./dist/index.js",
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@destinationstransfers/eslint-plugin": "^2.3.9",
    "@types/color-string": "^1.5.0",
    "@types/jest": "^24.0.13",
    "@types/node": "^12.0.2",
    "@types/node-forge": "^0.8.3",
    "@typescript-eslint/eslint-plugin": "^1.9.0",
    "@typescript-eslint/parser": "^1.9.0",
    "env-app-yaml": "^1.0.0",
    "eslint": "^5.16.0",
    "expect-more-jest": "^2.4.1",
    "jest": "^24.8.0",
    "jest-junit": "^6.4.0",
    "ts-jest": "^24.0.2",
    "typescript": "^3.4.5"
  },
  "scripts": {
    "test": "node -r env-app-yaml/config --expose-gc node_modules/jest/bin/jest --detectOpenHandles --notify --logHeapUsage --maxWorkers=1",
